<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.kanakkupetti.controller.AddUserDialogController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Add User" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUserName" promptText="User Name" prefWidth="200"/>
    <ComboBox fx:id="cmbRole" promptText="Select Role" prefWidth="200"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>
