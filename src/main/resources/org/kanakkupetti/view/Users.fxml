<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.kanakkupetti.controller.UsersController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Users" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <Button text="Add User"
            onAction="#handleAddUser"
            style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

    <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUserId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colUserName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
            <TableColumn fx:id="colLastLoggedIn" text="Last Logged In" prefWidth="180"/>
            <TableColumn fx:id="colEdit" text="Edit" prefWidth="80"/>
            <TableColumn fx:id="colDelete" text="Delete" prefWidth="80"/>
        </columns>
    </TableView>

</VBox>
