<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.kanakkupetti.controller.KanakkuController">

    <!-- Top Menu -->
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File"/>
                <Menu text="Settings"/>
                <Menu text="Help"/>
            </menus>
        </MenuBar>
    </top>

    <!-- Left Side Buttons -->
    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Inventory"
                    maxWidth="Infinity"
                    style="-fx-background-color: orange; -fx-text-fill: white;" />
            <Button text="User"
                    maxWidth="Infinity"
                    style="-fx-background-color: purple; -fx-text-fill: white;" />
        </VBox>
    </left>

    <!-- Center Layout -->
    <center>
        <HBox spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Items Table -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Items" style="-fx-font-weight: bold;" />
                <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colName" text="Name" prefWidth="100"/>
                        <TableColumn fx:id="colPrice" text="Price" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Button text="Add" onAction="#handleAddItem"/>
                    <Button text="Remove" onAction="#handleRemoveItem"/>
                </HBox>
            </VBox>

            <!-- User & Bill -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="User" style="-fx-font-weight: bold;" />
                <TextField fx:id="txtName" promptText="Name" maxWidth="Infinity"/>
                <TextField fx:id="txtPhone" promptText="Phone" maxWidth="Infinity"/>
                <TextField fx:id="txtAddress" promptText="Address" maxWidth="Infinity"/>

                <TableView fx:id="billTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="billColName" text="Name" prefWidth="100"/>
                        <TableColumn fx:id="billColQty" text="Quantity" prefWidth="80"/>
                        <TableColumn fx:id="billColPrice" text="Price" prefWidth="80"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Label text="Total:"/>
                    <Label fx:id="lblTotal" text="0.00"/>
                </HBox>

                <Button text="Get Bill" onAction="#handleGetBill"
                        maxWidth="Infinity"
                        style="-fx-background-color: blue; -fx-text-fill: white;" />
            </VBox>
        </HBox>
    </center>

    <!-- Bottom Actions -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Print" onAction="#handlePrint"/>
            <Button text="Send SMS/WhatsApp" onAction="#handleSendMessage"/>
            <Button text="Reminder" onAction="#handleReminder"/>
        </HBox>
    </bottom>
</BorderPane>
